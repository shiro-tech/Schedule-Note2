<h1>edit#project</h1>
<%= @project.title %>
<div class="container">
  <div class="row">
    <div class="project-new-container">
      <h1 class="col-md-offset-3 col-md-3">案件編集画面</h1>
      <%= form_for @project do |f| %>
        <div class="form-group">
          <%= f.label :title, class: 'text-white' %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :workperiod, class: 'text-white' %>
          <%= f.text_field :workperiod, class: 'form-control' %>
        </div>

        <%= f.submit "編集する", class: 'btn-block btn-white'%>
      <% end %>
    </div>
  </div>
</div>
