project#show
<div class="container">
  <div class="row">
    <h1 class="projects_title text-center"><%= @project.title %></h1>
<!-- 案件の修正(やり方は要確認) -->
    <%= link_to 'edit-projects', edit_project_path(id: @project.id) %>

<!-- 予定入力(一部表示) -->
    <%= link_to 'index-event', events_path %>

    <%= link_to 'new_event', new_event_path(project_id: @project.id) %>

<!-- 進捗情報入力 -->
<%= link_to 'index-progress', project_progresses_path(project_id: @project.id) %>

<!-- 記事入力 -->
<%= link_to 'index-topic', project_topics_path(project_id: @project.id) %>

<%= link_to project_path(id: @project.id), method: :delete do %>
<button type="button" class"btn btn-white">削除</button>
<% end %>
