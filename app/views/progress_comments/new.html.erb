progress_comments#new
<div class="container">
  <h1 class="comment-top text-center">コメント入力フォーム</h1>
  <div class="row">
    <%= form_for [@project,@progress,@progress_comment],url: project_progress_progress_comments_path(project_id: params[:project_id],progress_id: params[:progress_id]),method: :post do |comment| %>
      <div class="form-group">
        <%= comment.label :body, class: 'text-white' %>
        <%= comment.text_field :body, class: 'form-control' %>
      </div>
      <%= comment.submit "投稿する" %>
    <% end %>
  </div>
</div>
